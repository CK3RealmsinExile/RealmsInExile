window = {
	name = "lotr_achievement_window"
	size = { 700 880 }
    # movable = no
    layer = confirmation
	parentanchor = center

	visible = "[And( Not( IsPauseMenuShown ), And(Or(Not(IsObserver), And(GetPlayer.IsValid, GetPlayer.IsAlive)), And(IsDefaultGUIMode, GetVariableSystem.Exists( 'lotr_achievement' ))))]"

	using = Window_Background
	using = Window_Decoration
	using = Animation_ShowHide_Standard

	state = {
		name = _show
		using = Animation_FadeIn_Quick
	}

	state = {
		name = _hide
		using = Animation_FadeOut_Quick
	}
	
	vbox = {
		using = Window_Margins
		restrictparent_min = yes
        spacing = 10
		ignoreinvisible = yes
		allow_outside = yes

		vbox = {
			layoutpolicy_horizontal = expanding
			header_pattern = {
				layoutpolicy_horizontal = expanding

				blockoverride "header_text"
				{
					text = "ACHIEVEMENT"
				}

				blockoverride "button_close"
				{
					onclick = "[GetVariableSystem.Clear('lotr_achievement')]"
				}
			}
			text_single = {
                text = "lotr_total_achievements"
                size = { 81 81 }
                fontsize = 18
				tooltip = "lotr_total_tooltip"
                default_format = "#bold"
           		visible = "[GetScriptedGui( 'achievement_1000_view' ).IsValid( GuiScope.SetRoot( GetTitleByKey('k_wastelands').MakeScope ).End)]"
			}
		}
		
		text_single = {
			text = "[Localize('cross_save_tt')]"
            fontsize = 20
			max_width = 580
			visible = "[GetScriptedGui( 'achievement_1000_view' ).IsValid( GuiScope.SetRoot( GetTitleByKey('k_wastelands').MakeScope ).End)]"
		}

		widget = {
			size = { 600 50 }
			visible = "[Not(GetScriptedGui( 'achievement_1000_view' ).IsValid( GuiScope.SetRoot( GetTitleByKey('k_wastelands').MakeScope ).End))]"
			allow_outside = yes
			text_multi = {
				parentanchor = top|hcenter
				position = { 20 200 }
				max_width = 415
				autoresize = yes

				text = "cross_save_tt"
				align = center
				fontsize = 32
			}
			button_standard = {
				text = "i_understand_tt_enabled"
				position = { 0 450 }
				size = { 600 50  }
				onclick = "[GetScriptedGui( 'achievement_1000_set' ).Execute( GuiScope.SetRoot( GetTitleByKey('k_wastelands').GetHolder.MakeScope ).End)]"
			}
		}
		
		spacer = { size = { 0 5 } }  
		scrollbox = {
			visible = "[GetScriptedGui( 'achievement_1000_view' ).IsValid( GuiScope.SetRoot( GetTitleByKey('k_wastelands').MakeScope ).End)]"
            size = { 600 750 }

            background = {
                using = Background_Area
				alpha = 0.1
            }

            blockoverride "scrollbox_content"
            {
				spacer = { size = { 0 15 } }
				lotr_easy_achievements_dropdown = {}
				lotr_medium_achievements_dropdown = {}
				lotr_hard_achievements_dropdown = {}
				lotr_very_hard_achievements_dropdown = {}
				lotr_secret_achievements_dropdown = {}
            }
        }

		# button_standard = {
		# 	text = "Honestly, W"
		# 	onclick = "[GetScriptedGui('reset_achievements').Execute(GuiScope.SetRoot(GetPlayer.MakeScope).End)]"
		# }
		expand = {}
	}
}

