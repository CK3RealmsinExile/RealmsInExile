							}
						}

						text_single = {
							align = right
							minimumsize = { 15 0 }
							parentanchor = vcenter|right
							text = "[CharacterListItem.GetTitleItemCount]"

							tooltip = "CHARACTER_LIST_CLAIM_TOOLTIP"
						}
