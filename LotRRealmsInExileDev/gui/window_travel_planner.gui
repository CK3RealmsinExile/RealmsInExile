							tooltipwidget = {
								faith_tooltip = {}
							}
						}

						hbox = {
							datacontext = "[Character.GetCulture]"

							tooltipwidget = {
								culture_tooltip = {}
							}

							using = tooltip_se

							hbox = {
								spacing = 4

								icon = {
									name = "culture"
									texture = "gfx/interface/icons/icon_culture.dds"
									size = { 30 30 }
								}

								text_single = {
									layoutpolicy_horizontal = expanding
									max_width = 110
									align = nobaseline
									text = "CULTURE_LISTS_WINDOW"
								}
							}
						}
					}
				}
			}
		}
	}
