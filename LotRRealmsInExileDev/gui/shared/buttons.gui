# Use this to position a standard button_icon correctly inside a button_standard:
# button_standard = {
#     text = "BACK_LABEL"
#     button_back = {
#         using = ButtonStandardIconProperties
#     }
# }
template ButtonStandardIconProperties
{
    parentanchor = left|vcenter
    position = { 5 0 }
    size = { 25 25 }
    alwaystransparent = yes
}
